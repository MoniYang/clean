

 {% macro SideMenu(img) %}
   <aside class="flex flex-1 flex-col px-4 py-[60px] min-h-12 bg-black fixed top-0 bottom-0 left-0 right-0 z-[9] side-menu" data-open="false">
    <div class="flex flex-[1 0 auto] w-full h-fit  items-center space-x-4">
        <div class="flex flex-none w-[48px] h-[48px] border border-white  rounded-full text-sm">
            <img class="rounded-full" src="{{img}}/user.jpg" alt="">
        </div>
        <div class="flex flex-1 flex-col text-xl "> 
            <span class="text-white font-initial">Hi! UserName</span>
            <span class="text-theme-red">VIP Lv.2</span>
        </div>
        <button class="ml-auto">
            <i class="icon-arrow before:!bg-theme-red"></i>
        </button>
    </div>
    <div class="flex flex-[1 0 auto] py-3 border-t border-b  border-slate-700  font-400 text-white mt-3">
        <div class="flex flex-1 space-x-1">
            <span>Balances:</span>
            <span>$ 1,000,000.00</span>
        </div>
        <button class="flex flex-none bg-theme-red px-3 justify-center items-center rounded-full">
            <span>Deposit</span>
        </button>
    </div>
    <div class="flex flex-1 flex-col  text-lg font-light pb-[80px] overflow-y-auto ">
       {% set items = [
            { 
                title: 'GAMES', 
                items: [
                    { icon: 'slot', text: 'Slot' },
                    { icon: 'live-casino', text: 'Live Casino' },
                    { icon: 'poker', text: 'Poker' },
                    { icon: 'fishing', text: 'Fishing' },
                    { icon: 'lottery', text: 'Lottery' },
                    { icon: 'sport', text: 'Sport' }
                ]
            },{
                title: 'MORE',
                items: [
                { icon:'vip', text:'VIP' },
                { icon:'affiliate', text:'Affiliate Program' },
                { icon:'bonus', text:'Bonuses' }
                ]
            }
        ] %}
        {% for item in items %}
            <div class="flex flex-[1 0 auto] pt-4 text-slate-700 {{ 'border-t-0' if loop.first else 'border-t border-slate-700' }}">
                <span>{{ item.title }}</span>
            </div>
            <div class="flex flex-1 flex-col pl-4 pt-4 pb-5 space-y-4 text-slate-600 ">
            {% for subitem in item.items %}
                <div class="flex flex-1 text-white space-x-2.5"  data-menu-item={{subitem.icon}}>
                    <i class="before:!bg-theme-red before:!w-[18px] icon-{{ subitem.icon }} "></i>
                    <span class="flex-1">{{ subitem.text }}</span>
                </div>
            {% endfor %}
            </div>
        {% endfor %}

    </div>
   </aside>
{% endmacro %}
