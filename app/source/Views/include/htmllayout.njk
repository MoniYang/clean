    <style type="text/tailwindcss">
       @layer utilities  {
    :root {

        --swiper-pagination-color: white;
        --swiper-pagination-bullet-inactive-color: var(--swiper-pagination-color);
        --swiper-pagination-bottom: 0;

        --theme-red: #FF0000;
        --theme-dark-red: #C8102E;
        --theme-dark-red2: #400000;
        --theme-dark-red3: #840000;

        --highlight-green: #03FF00;
        --highlight-blue:#71c7d4;
        --highlight-yellow: #FFFF00;
       
        --grey:#888888 ;
        --brown:#400000;

        --dark-grey: #171b24;
        --info-board: #24232b;

        --black-opacity-1                  : hsla( 0, 0%, 0%, .87 );
        --black-opacity-2                  : hsla( 0, 0%, 0%, .70 );
        --black-opacity-3                  : hsla( 0, 0%, 0%, .54 );
        --black-opacity-4                  : hsla( 0, 0%, 0%, .32 );
        --black-opacity-5                  : hsla( 0, 0%, 0%, .16 );
        --black-opacity-6                  : hsla( 0, 0%, 0%, .08 );

        --white-opacity-1                  : hsla( 0, 0%, 100%, .87 );
        --white-opacity-2                  : hsla( 0, 0%, 100%, .70 );
        --white-opacity-3                  : hsla( 0, 0%, 100%, .54 );
        --white-opacity-4                  : hsla( 0, 0%, 100%, .32 );
        --white-opacity-5                  : hsla( 0, 0%, 100%, .16 );
        --white-opacity-6                  : hsla( 0, 0%, 100%, .08 );
    }
   

    .theme-red {
        color: var(--theme-red);
    }
    .highlight-green {
        color: var(--highlight-green);
    }
    .highlight-blue {
        color: var(--highlight-cyan);
    }
    .highlight-yellow {
        color: var(--highlight-yellow);
    }
    .dark-grey {
        color: var(--dark-grey);
    }
    .dark-red {
        color: var(--theme-dark-red);
    }
    .dark-red2 {
        color: var(--theme-dark-red2);
    }
    .dark-red3 {
        color: var(--theme-dark-red3);
    }
    .Black-opacity1 {
        color: var(--black-opacity-1);
    }
    .Black-opacity2 {
        color: var(--black-opacity-2);
    }
    .Black-opacity3 {
        color: var(--black-opacity-3);
    }
    .Black-opacity4 {
        color: var(--black-opacity-4);
    }
    .Black-opacity5 {
        color: var(--black-opacity-5);
    }
    .Black-opacity6 {
        color: var(--black-opacity-6);
    }
    .White-opacity1 {
        color: var(--white-opacity-1);
    }
    .White-opacity2 {
        color: var(--white-opacity-2);
    }
    .White-opacity3 {
        color: var(--white-opacity-3);
    }
    .White-opacity4 {
        color: var(--white-opacity-4);
    }
    .White-opacity5 {
        color: var(--white-opacity-5);
    }
    .White-opacity6 {
        color: var(--white-opacity-6);
    }

    .special-infoBoard {
        color: var(--info-board);
    }
    .modal[data-open="false"] {
        @apply  opacity-0 invisible;
    }
    .modal[data-open="true"] {
        @apply  opacity-100 visible;
    }
    .open {
        @apply transition duration-300 translate-x-0 ease-out;
    }
    .close {
        @apply transition duration-300 -translate-x-full ease-out;
    }

    [data-component="dropdown"][data-open="true"] > .dropdown-content {
    @apply visible;
    }

    [data-component="dropdown"][data-open="false"] > .dropdown-content {
    @apply hidden;
    }

    .appItem[data-selected="true"] > i:before {
    @apply bg-theme-red;
    }
    .appItem[data-selected="true"] > span {
        @apply text-theme-red;
    }
    .side-menu[data-open="true"] {
    @apply open;
    }
    .side-menu[data-open="false"] {
    @apply close;
    }

    .provider[data-open="true"] {
        @apply open;
    }
    .provider[data-open="false"] {
        @apply close;
    }
    .profile[data-open="true"] {
        @apply open;
    }
    .profile[data-open="false"] {
        @apply close;
    }
    .promo[data-open="true"] {
        @apply open;
    }
    .promo[data-open="false"] {
        @apply close;
    }
    .wallet[data-open="true"] {
        @apply open;
    }
    .wallet[data-open="false"] {
        @apply close;
    }
    .VIPPage[data-open="true"] {
        @apply open;
    }
    .VIPPage[data-open="false"] {
        @apply close;
    }
    .slot[data-open="true"] {
        @apply open;
    }
    .slot[data-open="false"] {
        @apply close;
    }
    
    .wallet button[data-selected="true"] {
        @apply bg-white text-theme-red border border-theme-red rounded-full ;
    }
    [data-page="deposit"][data-open="true"] {
        @apply visible;
    }
    [data-page="deposit"][data-open="false"] {
        @apply hidden;
    }
    [data-page="withdraw"][data-open="true"] {
        @apply visible;
    }
    [data-page="withdraw"][data-open="false"] {
        @apply hidden;
    }
    [data-page="statement"][data-open="true"] {
        @apply visible;
    }
    [data-page="statement"][data-open="false"] {
        @apply hidden;
    }
    [data-page="betHistory"][data-open="true"] {
        @apply visible;
    }
    [data-page="betHistory"][data-open="false"] {
        @apply hidden;
    }
    [data-page="VIPPage"][data-open="true"] {
        @apply visible;
    }
    [data-page="VIPPage"][data-open="false"] {
        @apply hidden;
    }
     [data-page="slot"][data-open="true"] {
        @apply visible;
    }
    [data-page="slot"][data-open="false"] {
        @apply hidden;
    }

}   
    </style>

    <script>
        tailwind.config = {
            theme: {
                extend: {
                    colors: {
                        theme: {
                            red:'var( --theme-red)'
                        },
                        highlight: {
                            green: 'var(--highlight-green)',
                            darkGreen: 'var(--highlight-dark-green)',
                            blue: 'var(--highlight-blue)',
                            yellow: 'var(--highlight-yellow)'
                        },
                        dark:{
                            grey: 'var(--dark-grey)',
                            red: 'var(--theme-dark-red)',
                            red2: 'var(--theme-dark-red2)',
                            red3: 'var(--theme-dark-red3)'
                        },
                        Black: {
                            opacity1: 'var(--black-opacity-1)',
                            opacity2: 'var(--black-opacity-2)',
                            opacity3: 'var(--black-opacity-3)',
                            opacity4: 'var(--black-opacity-4)',
                            opacity5: 'var(--black-opacity-5)',
                            opacity6: 'var(--black-opacity-6)'
                        },
                        White: {
                            opacity1: 'var(--white-opacity-1)',
